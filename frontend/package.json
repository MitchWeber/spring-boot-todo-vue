{
    "private": true,
    "scripts": {
        "build": "tsc --noEmit && tslint -p . && tslint 'src/**/*.d.ts' && webpack",
        "build:watch": "webpack --watch",
        "start": "webpack-serve",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "test:integration": "jest --config=jest-integration-config.json"
    },
    "devDependencies": {
        "@types/awesomplete": "^1.1.6",
        "@types/express": "^4.11.1",
        "@types/jest": "^22.1.3",
        "@types/node": "^8.0.0",
        "@types/puppeteer": "1.3",
        "@vue/test-utils": "^1.0.0-beta.12",
        "awesomplete": "^1.1.2",
        "css-loader": "^0.28.10",
        "element-ui": "^2.3.4",
        "empty-module": "0.0.2",
        "express": "^4.16.2",
        "file-loader": "^1.1.10",
        "jest": "^22.4.2",
        "jest-junit": "^3.6.0",
        "mini-css-extract-plugin": "^0.4.0",
        "node-sass": "^4.7.2",
        "portable-fetch": "^3.0.0",
        "puppeteer": "1.3",
        "sass-loader": "^6.0.7",
        "ts-jest": "^22.4.0",
        "ts-loader": "^4.2.0",
        "tslint": "^5.9.1",
        "typescript": "^2.7.2",
        "uglifyjs-webpack-plugin": "^1.2.2",
        "vue": "^2.5.13",
        "vue-i18n": "^7.4.2",
        "vue-jest": "^2.1.1",
        "vue-loader": "^15.0.0",
        "vue-property-decorator": "^6.0.0",
        "vue-template-compiler": "^2.5.13",
        "webpack": "^4.6.0",
        "webpack-cli": "^2.1.2",
        "webpack-serve": "^0.3.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "ts",
            "vue"
        ],
        "moduleNameMapper": {
            "\\.(css|scss)$": "empty-module",
            "^~(.+)$": "../../../node_modules/$1",
            "^client$": "<rootDir>/target/generated-sources/openapi"
        },
        "transform": {
            "^.+\\.(j|t)s$": "ts-jest",
            "^.+\\.vue$": "vue-jest"
        },
        "testMatch": [
            "<rootDir>/src/main/**/*.(spec|test).(js|ts)"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "<rootDir>/src/main/**/*.(js|ts|vue)",
            "!**/*.d.ts"
        ],
        "coverageDirectory": "target",
        "globals": {
            "ts-jest": {
                "ignoreCoverageForDecorators": true,
                "ignoreCoverageForAllDecorators": true
            }
        }
    }
}

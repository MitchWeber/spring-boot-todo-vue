{
    "private": true,
    "scripts": {
        "build": "tsc --noEmit && tslint --project . && webpack",
        "build:watch": "webpack --watch",
        "test": "jest --no-cache",
        "test:watch": "jest --no-cache --watchAll",
        "test:integration": "jest --config=jest-integration-config.json"
    },
    "devDependencies": {
        "@types/awesomplete": "^1.1.6",
        "@types/express": "^4.11.1",
        "@types/jest": "^22.1.3",
        "@types/puppeteer": "^1.0.0",
        "@vue/test-utils": "^1.0.0-beta.12",
        "awesomplete": "^1.1.2",
        "bootstrap-sass": "^3.3.7",
        "css-loader": "^0.28.10",
        "empty-module": "0.0.2",
        "express": "^4.16.2",
        "extract-text-webpack-plugin": "^3.0.2",
        "file-loader": "^1.1.10",
        "jest": "^22.4.2",
        "jest-junit": "^3.6.0",
        "node-sass": "^4.7.2",
        "puppeteer": "^1.1.1",
        "sass-loader": "^6.0.7",
        "style-loader": "^0.20.2",
        "ts-jest": "^22.4.0",
        "ts-loader": "^3.5.0",
        "tslint": "^5.9.1",
        "typescript": "^2.7.2",
        "uglifyjs-webpack-plugin": "^1.2.2",
        "vue": "^2.5.13",
        "vue-i18n": "^7.4.2",
        "vue-jest": "^2.1.0",
        "vue-loader": "^14.1.1",
        "vue-property-decorator": "^6.0.0",
        "vue-template-compiler": "^2.5.13",
        "webpack": "^3.11.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "ts",
            "vue"
        ],
        "moduleNameMapper": {
            "\\.(css|scss)$": "empty-module"
        },
        "transform": {
            "^.+\\.ts$": "ts-jest",
            "^.+\\.vue$": "vue-jest"
        },
        "testMatch": [
            "<rootDir>/src/main/**/*.(spec|test).(js|ts)"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "<rootDir>/src/main/**/*.(js|ts|vue)",
            "!**/*.(d|vue).ts"
        ],
        "coverageDirectory": "target"
    }
}

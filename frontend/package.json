{
    "private": true,
    "scripts": {
        "build": "tsc --noEmit && tslint -p . && tslint 'src/**/*.d.ts' && webpack",
        "build:watch": "webpack --watch",
        "start": "webpack-serve",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "test:integration": "jest --config=jest-integration-config.json"
    },
    "devDependencies": {
        "@types/awesomplete": "^1.1.6",
        "@types/express": "^4.11.1",
        "@types/jest": "^23.3.2",
        "@types/node": "^10.9.4",
        "@types/puppeteer": "1.6.4",
        "@vue/test-utils": "^1.0.0-beta.12",
        "awesomplete": "^1.1.2",
        "css-loader": "^1.0.0",
        "element-ui": "^2.4.7",
        "empty-module": "0.0.2",
        "express": "^4.16.2",
        "file-loader": "^2.0.0",
        "jest": "^23.6.0",
        "jest-junit": "^5.1.0",
        "mini-css-extract-plugin": "^0.4.0",
        "node-sass": "^4.7.2",
        "portable-fetch": "^3.0.0",
        "puppeteer": "1.8.0",
        "sass-loader": "^7.1.0",
        "ts-jest": "^23.1.4",
        "ts-loader": "^5.1.1",
        "tslint": "^5.9.1",
        "typescript": "^3.0.3",
        "vue": "^2.5.13",
        "vue-i18n": "^8.1.0",
        "vue-jest": "^2.1.1",
        "vue-loader": "^15.4.2",
        "vue-property-decorator": "^7.0.0",
        "vue-template-compiler": "^2.5.13",
        "webpack": "^4.19.0",
        "webpack-cli": "^3.1.0",
        "webpack-serve": "^2.0.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "ts",
            "vue"
        ],
        "moduleNameMapper": {
            "\\.(css|scss)$": "empty-module",
            "^~(.+)$": "../../../node_modules/$1",
            "^@Generated/(.+)$": "<rootDir>/target/generated-sources/$1"
        },
        "transform": {
            "^.+\\.(j|t)s$": "ts-jest",
            "^.+\\.vue$": "vue-jest"
        },
        "testMatch": [
            "<rootDir>/src/main/**/*.(spec|test).(js|ts)"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "<rootDir>/src/main/**/*.(js|ts)",
            "!**/*.d.ts"
        ],
        "coverageDirectory": "target",
        "globals": {
            "ts-jest": {
                "tsConfigFile": "tsconfig.jest.json"
            }
        }
    }
}

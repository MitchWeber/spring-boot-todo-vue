{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "importHelpers": true,
        "allowJs": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@Generated/*": [
                "target/generated-sources/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "target/generated-sources/**/*"
    ]
}

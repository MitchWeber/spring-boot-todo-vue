{
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "target": "es5",
        "lib": [
            "dom",
            "es6"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "client": [
                "target/generated-sources/openapi"
            ]
        }
    },
    "include": [
        "src/**/*",
        "target/generated-sources/**/*"
    ]
}
